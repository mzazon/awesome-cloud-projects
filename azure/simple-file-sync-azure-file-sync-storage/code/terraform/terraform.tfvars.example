# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize the values for your deployment

# Basic Configuration
location = "East US"
# resource_group_name = "my-filesync-rg"  # Uncomment to use custom name
# storage_account_name = "myfilesync"     # Uncomment to use custom name

# Storage Configuration
storage_account_tier             = "Standard"
storage_account_replication_type = "LRS"
enable_large_file_share         = true
enable_https_traffic_only       = true
min_tls_version                 = "TLS1_2"

# File Share Configuration
file_share_name        = "companyfiles"
file_share_quota       = 1024  # GB
file_share_access_tier = "Hot"

# Sync Service Configuration
# storage_sync_service_name = "my-filesync-service"  # Uncomment to use custom name
sync_group_name = "main-sync-group"
# cloud_endpoint_name = "my-cloud-endpoint"         # Uncomment to use custom name

# Sample Files
create_sample_files = true

# Resource Naming
use_random_suffix    = true
random_suffix_length = 6

# Tags
common_tags = {
  Environment = "Development"
  Department  = "IT"
  Project     = "Azure File Sync Demo"
  Owner       = "Your Name"
}

additional_tags = {
  CostCenter = "12345"
  Backup     = "Required"
}