{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "eastus"
    },
    "uniqueSuffix": {
      "value": "demo01"
    },
    "environment": {
      "value": "dev"
    },
    "openAiModels": {
      "value": {
        "gpt4": {
          "name": "gpt-4-content",
          "modelName": "gpt-4",
          "modelVersion": "0613",
          "skuCapacity": 10
        },
        "embedding": {
          "name": "text-embedding",
          "modelName": "text-embedding-ada-002",
          "modelVersion": "2",
          "skuCapacity": 10
        }
      }
    },
    "cosmosDbConfig": {
      "value": {
        "databaseName": "PersonalizationDB",
        "containers": [
          {
            "name": "UserProfiles",
            "partitionKeyPath": "/userId",
            "throughput": 400
          },
          {
            "name": "ContentItems",
            "partitionKeyPath": "/category",
            "throughput": 400
          }
        ]
      }
    },
    "functionAppConfig": {
      "value": {
        "runtime": "python",
        "runtimeVersion": "3.12",
        "functionsVersion": "4",
        "osType": "Linux"
      }
    },
    "tags": {
      "value": {
        "purpose": "content-personalization",
        "environment": "dev",
        "created-by": "bicep-template",
        "project": "ai-foundry-cosmos-demo",
        "cost-center": "development",
        "owner": "ai-team"
      }
    }
  }
}