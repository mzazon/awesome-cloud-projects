{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "value": "uptime"
    },
    "environment": {
      "value": "prod"
    },
    "location": {
      "value": "East US"
    },
    "websitesToMonitor": {
      "value": "https://www.yourcompany.com,https://api.yourcompany.com,https://portal.yourcompany.com"
    },
    "monitoringIntervalMinutes": {
      "value": 3
    },
    "enableAlerting": {
      "value": true
    },
    "alertEmailAddress": {
      "value": "ops-team@yourcompany.com"
    },
    "resourceTags": {
      "value": {
        "solution": "uptime-checker",
        "environment": "production",
        "owner": "operations-team",
        "cost-center": "operations",
        "deployment-method": "bicep",
        "criticality": "high",
        "backup-required": "true"
      }
    }
  }
}