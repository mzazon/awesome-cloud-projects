{
  "app": "npx ts-node --prefer-ts-exts app.ts",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    // Feature flags for CDK behavior
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": [
      "aws",
      "aws-cn"
    ],
    "@aws-cdk-containers/ecs-service-extensions:enableDefaultLogDriver": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/core:enableStackNameDuplicates": false,
    "@aws-cdk/core:enableDiffNoFail": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/aws-autoscaling:generateLaunchTemplateInsteadOfLaunchConfig": true,
    "@aws-cdk/core:includePrefixInUniqueNameGeneration": true,
    "@aws-cdk/aws-efs:denyAnonymousAccess": true,
    "@aws-cdk/aws-opensearchservice:enableLogging": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:automaticRotation": true,
    "@aws-cdk/aws-servicediscovery:namespaceChangeForceRecreate": true,
    "@aws-cdk/aws-s3-deployment:useEfsStorage": true,
    "@aws-cdk/aws-events:eventsTargetQueueSizeLimit": true,
    "@aws-cdk/aws-iam:standardizedServicePrincipals": true,
    "@aws-cdk/aws-ecs:disableExplicitDeploymentControllerForCircuitBreaker": true,
    "@aws-cdk/aws-iam:importedRoleStackSafeDefaultPolicyName": true,
    "@aws-cdk/aws-s3:bucketNotificationsHandlerRoleArn": true,
    "@aws-cdk/aws-codepipeline-actions:useNewDefaultBranchForCodeCommitSource": true,
    "@aws-cdk/aws-cloudwatch-actions:changeLambdaPermissionLogicalIdForLambdaAction": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeysDefaultValueToFalse": true,
    "@aws-cdk/aws-codepipeline:defaultPipelineTypeToV2": true,
    "@aws-cdk/aws-kms:reduceCrossAccountRegionPolicyScope": true,
    "@aws-cdk/aws-eks:nodegroupNameAttribute": true,
    "@aws-cdk/aws-ec2:ebsDefaultGp3Volume": true,
    "@aws-cdk/aws-ecs:removeDefaultDeploymentAlarm": false,
    
    // Custom context values for this specific application
    "visual-infrastructure-composer": {
      "enableMonitoring": false,
      "enableCloudTrail": false,
      "bucketPrefix": "my-visual-website",
      "websiteIndexDocument": "index.html",
      "websiteErrorDocument": "error.html",
      "enableVersioning": false,
      "enableLifecycleRules": true,
      "defaultRegion": "us-east-1"
    },
    
    // Environment-specific configurations
    "environments": {
      "development": {
        "enableTerminationProtection": false,
        "enableDeletionProtection": false,
        "autoDeleteObjects": true
      },
      "staging": {
        "enableTerminationProtection": false,
        "enableDeletionProtection": true,
        "autoDeleteObjects": false
      },
      "production": {
        "enableTerminationProtection": true,
        "enableDeletionProtection": true,
        "autoDeleteObjects": false,
        "enableBackup": true
      }
    },
    
    // Tagging configuration
    "defaultTags": {
      "Project": "VisualInfrastructureComposer",
      "Repository": "aws-recipes",
      "ManagedBy": "CDK",
      "CostCenter": "Engineering",
      "Environment": "Demo"
    }
  },
  
  // CDK Toolkit configuration
  "toolkit": {
    "stackName": "CDKToolkit",
    "cloudFormationExecutionRole": "arn:aws:iam::{ACCOUNT}:role/cdk-{QUALIFIER}-cfn-exec-role-{ACCOUNT}-{REGION}",
    "deployRole": "arn:aws:iam::{ACCOUNT}:role/cdk-{QUALIFIER}-deploy-role-{ACCOUNT}-{REGION}",
    "lookupRole": "arn:aws:iam::{ACCOUNT}:role/cdk-{QUALIFIER}-lookup-role-{ACCOUNT}-{REGION}",
    "fileAssetPublishingRole": "arn:aws:iam::{ACCOUNT}:role/cdk-{QUALIFIER}-file-publishing-role-{ACCOUNT}-{REGION}",
    "imageAssetPublishingRole": "arn:aws:iam::{ACCOUNT}:role/cdk-{QUALIFIER}-image-publishing-role-{ACCOUNT}-{REGION}",
    "bootstrapStackVersionSsmParameter": "/cdk-bootstrap/{QUALIFIER}/version",
    "requireApproval": "broadening",
    "skipVersionCheck": false
  },
  
  // Build configuration
  "build": {
    "commands": [
      "npm run build"
    ]
  },
  
  // Plugin configuration
  "plugins": [],
  
  // Version pinning for reproducible builds
  "version": "2.150.0",
  
  // Output configuration
  "output": "cdk.out",
  
  // Profile configuration for AWS credentials
  "profile": null,
  
  // Notice configuration
  "notices": true,
  
  // Asset configuration
  "assetMetadata": true,
  "pathMetadata": true,
  "versionReporting": true
}