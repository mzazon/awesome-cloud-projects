{
  "compilerOptions": {
    // Target ECMAScript version
    "target": "ES2020",
    
    // Module system
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    
    // Output directory for compiled JavaScript files
    "outDir": "./lib",
    "rootDir": "./",
    
    // Module resolution strategy
    "moduleResolution": "node",
    
    // Enable all strict type checking options
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Additional type checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    
    // Enable experimental decorators and metadata
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Source map and declaration generation
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Interop and compatibility options
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // Skip type checking for libraries
    "skipLibCheck": true,
    
    // Incremental compilation
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    
    // Path mapping for cleaner imports
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  
  // Include patterns for TypeScript files
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  
  // Exclude patterns for compilation
  "exclude": [
    "node_modules",
    "lib",
    "cdk.out",
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "coverage",
    "jest.config.js",
    ".eslintrc.js"
  ],
  
  // TypeScript project references for better build performance
  "compileOnSave": false,
  
  // Additional compiler options for CDK development
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}