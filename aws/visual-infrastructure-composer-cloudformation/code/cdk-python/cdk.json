{
  "app": "python app.py",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "requirements*.txt",
      "source.bat",
      "**/__pycache__",
      "**/*.pyc",
      ".venv/**",
      ".env/**",
      "node_modules/**"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target": "aws-cdk-lib",
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:enableStackNameDuplicates": true,
    "@aws-cdk/aws-cloudformation:parseIntegerAsString": true,
    "@aws-cdk/aws-apigateway:disableCloudWatchRole": false,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": false,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": false,
    "@aws-cdk/aws-kms:aliasNameRef": false,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": false,
    "@aws-cdk/aws-efs:defaultEncryptionAtRest": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2019": false,
    "@aws-cdk/core:includeStackTraces": true,
    "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-s3:createDefaultLoggingPolicy": true,
    "@aws-cdk/aws-sns-subscriptions:restrictSqsDescryption": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": true,
    "@aws-cdk/core:enablePartitionLiterals": true,
    "@aws-cdk/core:enableDiffNoFail": true,
    "@aws-cdk/aws-events:eventsTargetQueueMessageId": true,
    "@aws-cdk/aws-iam:minimizePolicies": true,
    "@aws-cdk/core:validateSnapshotRemovalPolicy": true,
    "@aws-cdk/aws-codepipeline:crossAccountKeyAliasStackSafeResourceName": true,
    "@aws-cdk/aws-s3:serverAccessLogsUseBucketPolicy": true,
    "@aws-cdk/aws-route53-patters:useCertificate": true,
    "@aws-cdk/customresources:installLatestAwsSdkDefault": false,
    "@aws-cdk/aws-rds:databaseProxyUniqueResourceName": true,
    "@aws-cdk/aws-codedeploy:removeAlarmsFromDeploymentGroup": true,
    "@aws-cdk/aws-apigateway:authorizerChangeDeploymentLogicalId": true,
    "@aws-cdk/aws-ec2:launchTemplateDefaultUserData": true,
    "@aws-cdk/aws-secretsmanager:useAttachedSecretResourcePolicyForSecretTargetAttachments": true,
    "@aws-cdk/aws-redshift:columnId": true,
    "@aws-cdk/aws-stepfunctions-tasks:enableLogging": true,
    "@aws-cdk/aws-ec2:restrictDefaultSecurityGroup": true,
    "@aws-cdk/aws-apigateway:requestValidatorUniqueId": false,
    "@aws-cdk/aws-kms:aliasNameRef": true,
    "@aws-cdk/core:enablePartitionLiterals": false,
    "aws-cdk:enableDiffNoFail": true,
    "@aws-cdk/core:bootAnalytics": false,
    
    "recipe:metadata": {
      "title": "Visual Infrastructure Design with Application Composer and CloudFormation",
      "id": "a7f3d9c2",
      "category": "devops",
      "difficulty": 100,
      "services": ["Application Composer", "CloudFormation", "S3"],
      "version": "1.0.0",
      "iac_tool": "CDK-Python"
    },
    
    "project:configuration": {
      "bucket_name_prefix": "visual-website",
      "default_region": "us-east-1",
      "tags": {
        "Project": "VisualInfrastructureComposer",
        "Environment": "Development",
        "IaCTool": "CDK-Python",
        "Repository": "recipes"
      }
    },
    
    "security:settings": {
      "enable_bucket_encryption": true,
      "enable_public_access_block": false,
      "enable_cors": true,
      "enable_website_hosting": true
    },
    
    "deployment:settings": {
      "auto_delete_objects": true,
      "removal_policy": "destroy",
      "versioning_enabled": false,
      "lifecycle_rules_enabled": false
    }
  },
  
  "profile": "default",
  
  "toolkitStackName": "CDKToolkit",
  
  "pathMetadata": false,
  "assetMetadata": false,
  "versionReporting": false,
  "notices": false,
  
  "bundlingStacks": [],
  
  "requireApproval": "never",
  
  "build": "python -m py_compile app.py",
  
  "venv": ".venv",
  
  "checksumAlgorithm": "sha256",
  
  "featureFlags": {
    "@aws-cdk/core:newStyleStackSynthesis": true,
    "@aws-cdk/core:stackRelativeExports": true,
    "@aws-cdk/aws-ecr-assets:dockerIgnoreSupport": true,
    "@aws-cdk/aws-secretsmanager:parseOwnedSecretName": true,
    "@aws-cdk/aws-kms:defaultKeyPolicies": true,
    "@aws-cdk/aws-s3:grantWriteWithoutAcl": true,
    "@aws-cdk/aws-ecs-patterns:removeDefaultDesiredCount": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-efs:defaultEncryptionAtRest": true,
    "@aws-cdk/aws-lambda:recognizeVersionProps": true,
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:enableStackNameDuplicates": false
  }
}