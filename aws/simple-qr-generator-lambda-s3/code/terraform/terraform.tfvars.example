# terraform.tfvars.example
# Example configuration file for AWS QR Code Generator
# Copy this file to terraform.tfvars and customize for your deployment

# ===== AWS CONFIGURATION =====
aws_region  = "us-east-1"
environment = "dev"

# ===== PROJECT CONFIGURATION =====
project_name = "qr-generator"

# ===== LAMBDA CONFIGURATION =====
# Adjust based on expected load and performance requirements
lambda_timeout      = 30      # Seconds (1-900)
lambda_memory_size  = 256     # MB (128-10240)

# ===== S3 CONFIGURATION =====
# WARNING: Setting to true allows Terraform to destroy bucket with contents
s3_bucket_force_destroy = true

# ===== API GATEWAY CONFIGURATION =====
enable_cors                = true
api_throttle_burst_limit   = 500   # Maximum burst requests
api_throttle_rate_limit    = 100   # Requests per second

# ===== LOGGING CONFIGURATION =====
log_retention_in_days = 14  # Valid values: 1,3,5,7,14,30,60,90,120,150,180,365,400,545,731,1827,3653

# ===== ADDITIONAL TAGS =====
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Application = "QR Code Generator"
  Environment = "Development"
}