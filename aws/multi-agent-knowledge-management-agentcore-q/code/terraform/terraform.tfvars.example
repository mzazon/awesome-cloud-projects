# Example Terraform Variables for Multi-Agent Knowledge Management System
# Copy this file to terraform.tfvars and customize for your environment

#------------------------------------------------------------------------------
# BASIC CONFIGURATION
#------------------------------------------------------------------------------

# AWS region for deployment
aws_region = "us-east-1"

# Project name for resource naming and tagging (max 20 characters, lowercase, hyphens only)
project_name = "multi-agent-km"

# Environment designation
environment = "dev" # Options: dev, staging, prod

#------------------------------------------------------------------------------
# SECURITY AND COMPLIANCE
#------------------------------------------------------------------------------

# Enable S3 bucket versioning for audit trails and compliance
enable_versioning = true

# Enable server-side encryption for S3 buckets and DynamoDB
enable_encryption = true

#------------------------------------------------------------------------------
# LAMBDA CONFIGURATION
#------------------------------------------------------------------------------

# Lambda function timeout in seconds (30-900)
lambda_timeout = 60

# Lambda function memory allocation in MB (128-10240)
lambda_memory_size = 512

#------------------------------------------------------------------------------
# API GATEWAY CONFIGURATION
#------------------------------------------------------------------------------

# API Gateway throttling limits
api_throttle_burst_limit = 1000  # Maximum concurrent requests
api_throttle_rate_limit = 500    # Requests per second

# CORS configuration for web applications
cors_allowed_origins = ["*"]  # For production, specify your domain: ["https://yourdomain.com"]
cors_allowed_methods = ["GET", "POST", "OPTIONS"]
cors_allowed_headers = ["Content-Type", "X-Amz-Date", "Authorization", "X-Api-Key", "X-Amz-Security-Token"]

#------------------------------------------------------------------------------
# SESSION MANAGEMENT
#------------------------------------------------------------------------------

# Session TTL in hours for automatic cleanup (1-168 hours / 1 week max)
session_ttl_hours = 24

#------------------------------------------------------------------------------
# Q BUSINESS CONFIGURATION
#------------------------------------------------------------------------------

# Q Business application settings
q_business_app_name = "Enterprise Knowledge Management System"
q_business_app_description = "Multi-agent knowledge management with specialized domain expertise"

#------------------------------------------------------------------------------
# KNOWLEDGE DOMAINS CONFIGURATION
#------------------------------------------------------------------------------

# Configure knowledge domains and their properties
knowledge_domains = {
  finance = {
    display_name = "Finance Knowledge Base"
    description = "Financial policies, budget guidelines, and approval processes"
    metadata_prefix = "finance/"
  }
  hr = {
    display_name = "HR Knowledge Base"
    description = "Human resources policies, employee procedures, and benefits"
    metadata_prefix = "hr/"
  }
  technical = {
    display_name = "Technical Knowledge Base"
    description = "Technical documentation, development standards, and system procedures"
    metadata_prefix = "technical/"
  }
  # Add additional domains as needed:
  # legal = {
  #   display_name = "Legal Knowledge Base"
  #   description = "Legal policies, contracts, and compliance documentation"
  #   metadata_prefix = "legal/"
  # }
}

#------------------------------------------------------------------------------
# AGENT CONFIGURATION
#------------------------------------------------------------------------------

# Configure individual agent settings
agent_configurations = {
  supervisor = {
    display_name = "Supervisor Agent"
    description = "Coordinates specialized agents for knowledge retrieval"
    memory_size = 512
    timeout = 60
  }
  finance = {
    display_name = "Finance Agent"
    description = "Specialist for financial policies and budget queries"
    memory_size = 256
    timeout = 30
  }
  hr = {
    display_name = "HR Agent"
    description = "Specialist for employee and policy queries"
    memory_size = 256
    timeout = 30
  }
  technical = {
    display_name = "Technical Agent"
    description = "Specialist for engineering and system queries"
    memory_size = 256
    timeout = 30
  }
}

#------------------------------------------------------------------------------
# PRODUCTION CONFIGURATION EXAMPLES
#------------------------------------------------------------------------------

# For production environments, consider these settings:

# Production API throttling
# api_throttle_burst_limit = 5000
# api_throttle_rate_limit = 2000

# Production Lambda settings
# lambda_memory_size = 1024
# lambda_timeout = 90

# Production CORS (replace with your actual domain)
# cors_allowed_origins = ["https://yourdomain.com", "https://app.yourdomain.com"]

# Extended session management for production
# session_ttl_hours = 72  # 3 days

# Production project naming
# project_name = "enterprise-km"
# environment = "prod"

#------------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION EXAMPLES
#------------------------------------------------------------------------------

# For development environments:

# Reduced costs
# lambda_memory_size = 256
# lambda_timeout = 30

# Relaxed throttling for testing
# api_throttle_burst_limit = 100
# api_throttle_rate_limit = 50

# Shorter session retention for testing
# session_ttl_hours = 4

# Development naming
# project_name = "dev-multi-agent"
# environment = "dev"