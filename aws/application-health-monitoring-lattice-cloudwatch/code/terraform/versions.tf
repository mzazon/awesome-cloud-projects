terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.4"
    }
    archive = {
      source  = "hashicorp/archive"
      version = "~> 2.4"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = "VPC Lattice Health Monitoring"
      Environment = var.environment
      ManagedBy   = "Terraform"
      Recipe      = "application-health-monitoring-lattice-cloudwatch"
    }
  }
}