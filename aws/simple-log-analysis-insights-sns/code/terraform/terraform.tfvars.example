# Example Terraform variables file for Simple Log Analysis solution
# Copy this file to terraform.tfvars and customize the values

# Basic project configuration
project_name = "my-log-analysis"
environment  = "dev"
aws_region   = "us-east-1"

# Email address for receiving SNS notifications (REQUIRED)
notification_email = "your-email@example.com"

# CloudWatch Log Group configuration
log_group_name     = "/aws/lambda/demo-app"
log_retention_days = 7

# Lambda function configuration
lambda_timeout     = 60
lambda_memory_size = 256

# Log analysis configuration
analysis_schedule         = "rate(5 minutes)"
error_patterns           = ["ERROR", "CRITICAL", "FATAL"]
query_time_range_minutes = 10
max_errors_to_display    = 5

# SNS configuration
enable_sns_subscription = true

# Additional tags for all resources
tags = {
  Owner       = "DevOps Team"
  Application = "Log Monitoring"
  Environment = "Development"
}

