# Example Terraform variables for Interview Practice Assistant
# Copy this file to terraform.tfvars and customize for your deployment

# Required: Your Google Cloud Project ID
project_id = "your-gcp-project-id"

# Regional Configuration
region = "us-central1"
zone   = "us-central1-a"

# Environment and Naming
environment = "dev"
prefix      = "interview-assistant"

# AI Model Configuration
gemini_model           = "gemini-1.5-pro"    # Use "gemini-1.5-flash" for cost optimization
speech_model           = "latest_long"
speech_language_code   = "en-US"
enable_enhanced_speech = true

# Function Resource Allocation
function_memory_mb = {
  speech        = 512
  analysis      = 1024
  orchestration = 256
}

function_timeout_seconds = {
  speech        = 120
  analysis      = 120
  orchestration = 300
}

# Storage Configuration
bucket_lifecycle_age_days = 30
force_destroy_bucket     = false

# Security Configuration (IMPORTANT for production)
allow_unauthenticated_functions = false  # Set to true only for testing
service_account_name           = "interview-assistant"

# Feature Flags
enable_apis        = true
create_sample_data = true

# Resource Labels
labels = {
  purpose     = "interview-practice"
  environment = "dev"
  managed-by  = "terraform"
  owner       = "your-name"
  team        = "your-team"
}