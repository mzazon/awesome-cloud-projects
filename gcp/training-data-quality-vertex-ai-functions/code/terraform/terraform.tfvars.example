# =============================================================================
# Example Terraform Variables Configuration
# =============================================================================
# Copy this file to terraform.tfvars and customize the values for your deployment.
# This example shows all available configuration options with recommended defaults.

# -----------------------------------------------------------------------------
# Required Variables - You MUST set these values
# -----------------------------------------------------------------------------

# Your GCP project ID where resources will be created
project_id = "your-gcp-project-id"

# -----------------------------------------------------------------------------
# Location and Environment Configuration
# -----------------------------------------------------------------------------

# GCP region for deploying resources (must support Vertex AI and Cloud Functions)
region = "us-central1"

# GCP zone within the region
zone = "us-central1-a"

# Environment name for resource labeling
environment = "dev"

# -----------------------------------------------------------------------------
# Resource Naming Configuration
# -----------------------------------------------------------------------------

# Prefix for the Cloud Storage bucket name (will be suffixed with random string)
bucket_name_prefix = "training-data-quality"

# Prefix for the Cloud Function name (will be suffixed with random string)
function_name_prefix = "data-quality-analyzer"

# Prefix for the service account name (will be suffixed with random string)
service_account_prefix = "data-quality-function-sa"

# Prefix for the Pub/Sub topic name (will be suffixed with random string)
pubsub_topic_prefix = "data-upload-notifications"

# -----------------------------------------------------------------------------
# Cloud Function Configuration
# -----------------------------------------------------------------------------

# Memory allocation for the Cloud Function in MB
function_memory_mb = 1024

# Timeout for the Cloud Function in seconds (max 540 for HTTP functions)
function_timeout_seconds = 540

# Runtime environment for the Cloud Function
function_runtime = "python312"

# -----------------------------------------------------------------------------
# Security and Access Control
# -----------------------------------------------------------------------------

# Whether to allow unauthenticated access (set to false for production)
allow_unauthenticated = true

# Whether to force destroy the bucket even if it contains objects
force_destroy_bucket = true

# Network ingress settings for the Cloud Function
ingress_settings = "ALLOW_ALL"

# -----------------------------------------------------------------------------
# Feature Toggles
# -----------------------------------------------------------------------------

# Enable automatic analysis when new data is uploaded to the bucket
enable_automatic_analysis = false

# Whether to create a Cloud Monitoring dashboard
create_monitoring_dashboard = true

# Enable enhanced Cloud Logging
enable_cloud_logging = true

# Enable Cloud Monitoring alerts for function failures
enable_failure_alerts = true

# -----------------------------------------------------------------------------
# Vertex AI Configuration
# -----------------------------------------------------------------------------

# Vertex AI model to use for content analysis
vertex_ai_model = "gemini-1.5-flash"

# Maximum number of Vertex AI API calls per analysis session
max_api_calls_per_analysis = 10

# -----------------------------------------------------------------------------
# Data Quality Analysis Configuration
# -----------------------------------------------------------------------------

# Threshold for bias detection (0.1 = 10% difference triggers bias detection)
bias_detection_threshold = 0.1

# Minimum vocabulary diversity threshold (0.3 = 30% unique words)
vocabulary_diversity_threshold = 0.3

# Number of samples to analyze with Gemini (to control costs)
sample_size_for_analysis = 5

# -----------------------------------------------------------------------------
# Cost Control Configuration
# -----------------------------------------------------------------------------

# Daily limit for Vertex AI API calls to control costs
daily_api_call_limit = 100

# Number of days after which objects in the bucket are automatically deleted
bucket_lifecycle_days = 30

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------

# Email address for receiving analysis completion notifications (optional)
notification_email = "your-email@example.com"

# -----------------------------------------------------------------------------
# Custom Labels and Tags
# -----------------------------------------------------------------------------

# Custom labels to apply to all resources
custom_labels = {
  application  = "training-data-quality"
  owner       = "ml-team"
  cost-center = "research-and-development"
  department  = "data-science"
}

# -----------------------------------------------------------------------------
# Advanced Network Configuration (Optional)
# -----------------------------------------------------------------------------

# VPC network for the Cloud Function (leave empty for default network)
# vpc_network = "projects/your-project/global/networks/your-vpc"

# Subnet for the Cloud Function (leave empty for default subnet)
# subnet = "projects/your-project/regions/us-central1/subnetworks/your-subnet"

# =============================================================================
# Example Configurations for Different Environments
# =============================================================================

# Development Environment Example:
# environment = "dev"
# function_memory_mb = 512
# sample_size_for_analysis = 3
# daily_api_call_limit = 50
# allow_unauthenticated = true
# enable_automatic_analysis = false

# Staging Environment Example:
# environment = "staging"
# function_memory_mb = 1024
# sample_size_for_analysis = 5
# daily_api_call_limit = 100
# allow_unauthenticated = false
# enable_automatic_analysis = true

# Production Environment Example:
# environment = "prod"
# function_memory_mb = 2048
# sample_size_for_analysis = 10
# daily_api_call_limit = 500
# allow_unauthenticated = false
# enable_automatic_analysis = true
# create_monitoring_dashboard = true
# enable_failure_alerts = true

# =============================================================================
# Cost Optimization Examples
# =============================================================================

# Low-cost configuration for testing:
# function_memory_mb = 256
# sample_size_for_analysis = 2
# daily_api_call_limit = 20
# bucket_lifecycle_days = 7
# vertex_ai_model = "gemini-1.5-flash"

# High-performance configuration for production:
# function_memory_mb = 4096
# sample_size_for_analysis = 20
# daily_api_call_limit = 1000
# bucket_lifecycle_days = 90
# vertex_ai_model = "gemini-1.5-pro"