# Example Terraform Variables for BMI Calculator API
# Copy this file to terraform.tfvars and customize for your deployment

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# Geographic configuration
region = "us-central1"
zone   = "us-central1-a"

# Function configuration
function_name    = "bmi-calculator"
function_runtime = "python311"
function_memory  = 256
function_timeout = 60

# Storage configuration
bucket_name_prefix = "bmi-history"
storage_class     = "STANDARD"

# Security configuration
allow_unauthenticated = true

# Enable APIs automatically
enable_apis = true

# Resource labels for organization and cost tracking
labels = {
  environment = "development"
  application = "bmi-calculator"
  managed-by  = "terraform"
  owner       = "your-team"
  cost-center = "engineering"
}

# Storage lifecycle rules for cost optimization
bucket_lifecycle_rules = [
  {
    action = {
      type = "Delete"
    }
    condition = {
      age = 90  # Delete objects older than 90 days
    }
  },
  {
    action = {
      type          = "SetStorageClass"
      storage_class = "NEARLINE"
    }
    condition = {
      age = 30  # Move to NEARLINE after 30 days
    }
  }
]

# CORS configuration for web browser access
cors_origins = ["*"]

