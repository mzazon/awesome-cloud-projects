# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment

# Required Variables
project_id = "your-gcp-project-id"     # Replace with your Google Cloud Project ID
region     = "us-central1"             # Choose your preferred region

# Environment Configuration
environment = "dev"                    # Environment name (dev, staging, prod)

# Function Configuration
function_memory       = 1024           # Memory in MB (128-8192)
function_timeout      = 540            # Timeout in seconds (max 3600)
function_max_instances = 10            # Maximum concurrent instances

# Speech-to-Text Configuration
speech_language_code = "en-US"         # Language code (en-US, es-ES, fr-FR, etc.)
speaker_count_min    = 2               # Minimum speakers for diarization
speaker_count_max    = 6               # Maximum speakers for diarization

# Vertex AI Configuration
vertex_ai_location = "us-central1"     # Vertex AI region
gemini_model      = "gemini-1.5-pro"  # Gemini model (gemini-1.0-pro, gemini-1.5-pro, gemini-1.5-flash)

# Storage Configuration
bucket_storage_class              = "STANDARD"  # STANDARD, NEARLINE, COLDLINE, ARCHIVE
bucket_location                   = null        # Override bucket location (null uses region)
lifecycle_age_days               = 30          # Auto-delete files after N days
enable_uniform_bucket_level_access = true       # Enable uniform bucket access
enable_versioning                = false       # Enable object versioning

# Resource Labels
labels = {
  environment = "dev"
  project     = "meeting-summary"
  team        = "ai-platform"
  cost-center = "engineering"
  managed-by  = "terraform"
}

# Examples for Different Environments:

# Development Environment (low cost, smaller limits)
# function_memory = 512
# function_max_instances = 3
# lifecycle_age_days = 7
# bucket_storage_class = "STANDARD"

# Production Environment (high performance, larger limits)
# function_memory = 2048
# function_max_instances = 50
# lifecycle_age_days = 90
# bucket_storage_class = "STANDARD"
# enable_versioning = true

# Multi-language Environment
# speech_language_code = "es-ES"  # For Spanish
# speaker_count_max = 8           # More speakers

# Cost-Optimized Environment
# bucket_storage_class = "NEARLINE"  # Lower storage costs
# lifecycle_age_days = 14           # Shorter retention
# function_memory = 512             # Smaller function size