# Example Terraform variables file for GCP Document Classification
# Copy this file to terraform.tfvars and customize for your environment

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# GCP Region (choose one that supports Cloud Functions and Vertex AI)
region = "us-central1"
zone   = "us-central1-a"

# Environment and naming
environment     = "dev"
resource_prefix = "doc-classifier"

# Cloud Function configuration
function_memory  = 512    # Memory in MiB (128, 256, 512, 1024, 2048, 4096, 8192)
function_timeout = 540    # Timeout in seconds (max 540)
max_instances    = 10     # Maximum concurrent function instances
min_instances    = 0      # Minimum instances (0 for cold start)

# Document classification categories
document_categories = [
  "contracts",
  "invoices", 
  "reports",
  "other"
]

# Storage configuration
storage_class      = "STANDARD"  # STANDARD, NEARLINE, COLDLINE, ARCHIVE
enable_versioning  = false       # Enable object versioning
enable_lifecycle   = true        # Enable lifecycle management
lifecycle_age_days = 30          # Days before automatic deletion

# Vertex AI configuration
vertex_ai_location = "us-central1"  # Must support Gemini models

# Monitoring and logging
enable_monitoring  = true
enable_logging     = true
log_retention_days = 30

# Security settings
enable_uniform_bucket_level_access = true
force_destroy_buckets              = false  # CAUTION: true allows Terraform to delete buckets with objects

# Resource labels (applied to all resources)
labels = {
  purpose     = "document-classification"
  managed-by  = "terraform"
  component   = "ai-ml"
  owner       = "your-team"
  project     = "intelligent-documents"
  cost-center = "engineering"
}