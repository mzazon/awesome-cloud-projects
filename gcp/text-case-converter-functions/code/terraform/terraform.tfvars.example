# Example Terraform variables for GCP Text Case Converter API
# Copy this file to terraform.tfvars and customize values

# Required: Your Google Cloud Project ID
project_id = "my-gcp-project-12345"

# Optional: Deployment region (default: us-central1)
region = "us-central1"

# Optional: Function name (default: text-case-converter)
function_name = "text-case-converter"

# Optional: Function description
function_description = "HTTP API for converting text between different case formats"

# Optional: Memory allocation in MB (default: 128)
# Supported values: 128, 256, 512, 1024, 2048, 4096, 8192
memory_mb = 128

# Optional: Function timeout in seconds (default: 60)
timeout_seconds = 60

# Optional: Maximum number of instances (default: 10)
max_instances = 10

# Optional: Minimum number of instances (default: 0 for scale-to-zero)
min_instances = 0

# Optional: Allow public access without authentication (default: true)
allow_unauthenticated = true

# Optional: Python runtime version (default: python311)
# Supported values: python38, python39, python310, python311, python312
runtime = "python311"

# Optional: Environment variables for the function
environment_variables = {
  LOG_LEVEL = "INFO"
  # Add custom environment variables here
}

# Optional: Resource labels
labels = {
  environment = "development"
  purpose     = "text-processing"
  managed-by  = "terraform"
  team        = "api-team"
}