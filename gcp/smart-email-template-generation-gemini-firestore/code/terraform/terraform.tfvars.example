# ============================================================================
# Smart Email Template Generation with Gemini and Firestore - Example Variables
# ============================================================================
# Copy this file to terraform.tfvars and customize the values for your environment.
# This file contains example configurations for deploying the AI-powered email
# template generator using Google Cloud services.
# ============================================================================

# ============================================================================
# PROJECT CONFIGURATION (REQUIRED)
# ============================================================================

# Your Google Cloud Project ID where resources will be created
project_id = "your-project-id"

# Primary region for deploying resources
region = "us-central1"

# Environment name for resource labeling
environment = "development"

# ============================================================================
# FIRESTORE CONFIGURATION
# ============================================================================

# Name prefix for the Firestore database
database_name = "email-templates"

# Location for the Firestore database
firestore_location = "us-central"

# Enable deletion protection for Firestore database
enable_deletion_protection = true

# ============================================================================
# CLOUD FUNCTION CONFIGURATION
# ============================================================================

# Name prefix for the Cloud Function
function_name = "email-template-generator"

# Memory allocation for the Cloud Function
function_memory = "512Mi"

# Timeout for the Cloud Function in seconds
function_timeout = 120

# Maximum number of Cloud Function instances
function_max_instances = 10

# Minimum number of Cloud Function instances (0 for cold starts)
function_min_instances = 0

# Allow unauthenticated invocations (set to false for production)
allow_unauthenticated_invocations = true

# ============================================================================
# VERTEX AI CONFIGURATION
# ============================================================================

# Location for Vertex AI services (must support Gemini models)
vertex_ai_location = "us-central1"

# Gemini model to use for email template generation
gemini_model = "gemini-1.5-flash"

# ============================================================================
# DATA INITIALIZATION
# ============================================================================

# Create and deploy a function to initialize sample data
initialize_sample_data = true

# Company name for sample data
sample_company_name = "TechStart Solutions"

# Industry for sample data
sample_industry = "Software"

# Brand voice for sample data
sample_brand_voice = "innovative, trustworthy, solution-focused"

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================

# Enable Cloud Monitoring alerts
enable_monitoring = true

# Email address for monitoring alerts (leave empty to disable)
notification_email = "your-email@example.com"

# Error rate threshold for triggering alerts (0.0 to 1.0)
error_threshold = 0.1

# ============================================================================
# SECURITY AND COMPLIANCE
# ============================================================================

# Enable Google Cloud resource tagging
enable_resource_tagging = true

# Enable audit logging
enable_audit_logs = true

# Allowed CORS origins for the Cloud Function
cors_origins = ["*"]

# ============================================================================
# COST OPTIMIZATION
# ============================================================================

# Enable lifecycle policies for Cloud Storage buckets
enable_lifecycle_policies = true

# Storage class for Cloud Storage buckets
storage_class = "STANDARD"

# ============================================================================
# ADVANCED CONFIGURATION (OPTIONAL)
# ============================================================================

# Custom domain for the Cloud Function (optional)
# custom_domain = "api.yourcompany.com"

# VPC connector for Cloud Function network access (optional)
# vpc_connector = "projects/your-project/locations/us-central1/connectors/your-connector"

# Custom service account email (optional)
# service_account_email = "custom-sa@your-project.iam.gserviceaccount.com"

# KMS key for encrypting function environment variables (optional)
# kms_key_name = "projects/your-project/locations/us-central1/keyRings/your-ring/cryptoKeys/your-key"

# Additional labels to apply to all resources
labels = {
  team        = "ai-platform"
  cost-center = "engineering"
  project     = "email-automation"
}

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable experimental features (use with caution)
enable_experimental_features = false

# Enable debug logging (may expose sensitive information)
enable_debug_logging = false

# Enable detailed performance monitoring
enable_performance_monitoring = true