# Example Terraform variables file for Weather Information API
# Copy this file to terraform.tfvars and customize the values for your deployment

# Required: GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Function Configuration
function_name       = "weather-api"
function_runtime    = "python312"
function_memory     = 256
function_timeout    = 60
function_max_instances = 1000

# Weather API Configuration
# Get your free API key from: https://openweathermap.org/api
weather_api_key = "your-openweathermap-api-key-here"

# Security Configuration
enable_public_access = true
ingress_settings    = "ALLOW_ALL"  # Options: ALLOW_ALL, ALLOW_INTERNAL_ONLY, ALLOW_INTERNAL_AND_GCLB

# CORS Configuration
cors_origins = ["*"]  # For production, specify allowed origins like ["https://yourdomain.com"]

# Storage Configuration
source_bucket_name    = ""  # Leave empty to auto-generate unique name
source_archive_object = "weather-function-source.zip"

# Monitoring and Logging
enable_logging = true
log_level     = "INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Service Account Configuration
create_service_account = true
service_account_name   = "weather-api-sa"

# Resource Labeling
labels = {
  environment = "development"
  project     = "weather-api"
  managed-by  = "terraform"
  owner       = "your-team"
  cost-center = "engineering"
}

# Networking (Optional)
# vpc_connector = "projects/your-project/locations/us-central1/connectors/your-connector"